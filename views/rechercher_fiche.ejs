<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->
    <div class="fiche" id="fiche">
        <div class="b">
            <font color="0000" size="5">
                <i class="fa-regular fa-file-lines fa-xl"></i>
                <b>&nbsp;&nbsp;Fiches patients</b>
            </font>

            <!-- bouton lien vers le formulaire d'ajouter patient qui est dans la page ficheform.html-->
            <a href="/ajouter-fiche"><button class="ajouter ">Ajouter patient</button></a>
            <br>
            <br>
            <br>
        </div>
        <div class="rechercher">
            &nbsp;&nbsp;
            <h3> Resultats de la recherche </h3>
            &nbsp;&nbsp;
        </div>

        <% if (fiche && fiche.length> 0) { %>

            <table class="tableau">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Sexe</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i=0 %>
                        <% fiche.forEach(function (item) { %>
                            <tr>
                                <td>
                                    <%= i+1%>
                                </td>
                                <td>
                                    <%= item.nom %>
                                </td>
                                <td>
                                    <%= item.prenom %>
                                </td>
                                <td>
                                    <%= item.sexe %>
                                </td>
                                <td>
                                    <a href="/modifier-fiche?id=<%= item._id%>" class="btn border-shadow update">
                                        <span class="text-gradient"><i class="fa-solid fa-pen-to-square"
                                                style="color: blue;"></i></span>
                                    </a>
                                    <a class="btn border-shadow delete" style="color:red" data-id=<%=item._id%>>
                                        <span class="text-gradient"><i class="fa-solid fa-trash"></i></span>
                                    </a>

                                </td>
                            </tr>
                            <% i=i+1 %>
                                <% }) %>

                </tbody>
            </table>
            <% }else { %>
                <p>Aucune fiche trouvée avec cette recherche.</p>
                <% } %>
    </div>
    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->