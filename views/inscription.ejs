                <input type="text" id="Lieu de naissance" placeholder="Lieu de naissance" name="placeOfBirth">
                <label for="sexe"></label>
                <br>
                <select id="sexe" name="gender" class="inp">

                    <option value="Féminin">Féminin</option>
                    <option value="Masculin">Masculin</option>
                </select>
                <input type="text" id="numero" placeholder="Téléphone" name="phone">
                <input type="email" id="email" placeholder="Email" name="email">

                <input type="password" id="psw" placeholder="Mot de passe" name="password">
                <input type="password" id="psw2" placeholder="Confirmer votre mot de passe" name="confirmPassword">

                <input type="submit" value="S'inscrire" class="b">
            </form>
        </div>

        <div class="overlay-container" id="container-left">
            <div class="overlay">
